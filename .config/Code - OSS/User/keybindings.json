[
    // Basic movement
    {
        "key": "ctrl+i",
        "command": "cursorUp",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+k",
        "command": "cursorDown",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+j",
        "command": "cursorLeft",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+l",
        "command": "cursorRight",
        "when": "editorTextFocus"
    },
    // Autocomplete movement
    {
        "key": "ctrl+i",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetVisible"
    },
    {
        "key": "ctrl+j",
        "command": "selectPrevSuggestion",
        "when": "suggestWidgetVisible"
    },
    {
        "key": "ctrl+k",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetVisible"
    },
    {
        "key": "ctrl+l",
        "command": "selectNextSuggestion",
        "when": "suggestWidgetVisible"
    },
    // Command pallete movement
    {
        "key": "ctrl+i",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    // Quick movement
    {
        "key": "alt+;",
        "command": "cursorEnd",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+h",
        "command": "cursorHome",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+j",
        "command": "cursorMove",
        "args": {
            "to": "left",
            "by": "character",
            "value": 10
        },
        "when": "editorTextFocus"
    },
    {
        "key": "alt+l",
        "command": "cursorMove",
        "args": {
            "to": "right",
            "by": "character",
            "value": 10
        },
        "when": "editorTextFocus"
    },
    {
        "key": "alt+i",
        "command": "cursorMove",
        "args": {
            "to": "up",
            "by": "line",
            "value": 10
        },
        "when": "editorTextFocus"
    },
    {
        "key": "alt+k",
        "command": "cursorMove",
        "args": {
            "to": "down",
            "by": "line",
            "value": 10
        },
        "when": "editorTextFocus"
    },
    // Move and select
    {
        "key": "ctrl+shift+j",
        "command": "cursorMove",
        "args": {
            "to": "left",
            "by": "character",
            "select": true
        },
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+l",
        "command": "cursorMove",
        "args": {
            "to": "right",
            "by": "character",
            "select": true
        },
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+i",
        "command": "cursorMove",
        "args": {
            "to": "up",
            "by": "line",
            "select": true
        },
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+k",
        "command": "cursorMove",
        "args": {
            "to": "down",
            "by": "line",
            "select": true
        },
        "when": "editorTextFocus"
    },
    // Move and select by words
    {
        "key": "alt+shift+j",
        "command": "cursorWordLeftSelect",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+shift+l",
        "command": "cursorWordRightSelect",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+shift+i",
        "command": "cursorMove",
        "args": {
            "to": "up",
            "by": "line",
            "select": true
        },
        "when": "editorTextFocus"
    },
    {
        "key": "alt+shift+k",
        "command": "cursorMove",
        "args": {
            "to": "down",
            "by": "line",
            "select": true
        },
        "when": "editorTextFocus"
    },
    // Move and select line
    {
        "key": "ctrl+shift+;",
        "command": "cursorEndSelect",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+shift+h",
        "command": "cursorHomeSelect",
        "when": "editorTextFocus"
    },
    // Quick move and select
    {
        "key": "ctrl+alt+shift+j",
        "command": "cursorMove",
        "args": {
            "to": "left",
            "by": "character",
            "select": true,
            "value": 10
        },
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+shift+l",
        "command": "cursorMove",
        "args": {
            "to": "right",
            "by": "character",
            "select": true,
            "value": 10
        },
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+shift+i",
        "command": "cursorMove",
        "args": {
            "to": "up",
            "by": "line",
            "select": true,
            "value": 10
        },
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+shift+k",
        "command": "cursorMove",
        "args": {
            "to": "down",
            "by": "line",
            "select": true,
            "value": 10
        },
        "when": "editorTextFocus"
    },
    // Bracket selection
    {
        "key": "alt+s",
        "command": "editor.action.smartSelect.expand",
        "when": "editorTextFocus"
    },
    // Bracket movement
    {
        "key": "ctrl+m",
        "command": "editor.action.jumpToBracket",
        "when": "editorTextFocus"
    },
    // Move to top/bottom of file
    {
        "key": "ctrl+up",
        "command": "cursorTop",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+down",
        "command": "cursorBottom",
        "when": "editorTextFocus"
    },
    // Move to front/end of line
    {
        "key": "ctrl+right",
        "command": "cursorEnd",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+left",
        "command": "cursorHome",
        "when": "editorTextFocus"
    },
    // Actions
    {
        "key": "ctrl+shift+d",
        "command": "editor.action.deleteLines",
        "when": "editorTextFocus"
    },
    {
        "key": "alt+t",
        "command": "workbench.action.createTerminalEditor"
    },
    {
        "key": "alt+d",
        "command": "editor.action.revealDefinition"
    },
    {
        "key": "ctrl+h",
        "command": "editor.action.showHover"
    },
    // Sidebar commands
    {
        "key": "alt+x",
        "command": "workbench.view.debug",
        "when": "!view.workbench.debug.welcome.visible"
    },
    {
        "key": "alt+x",
        "command": "workbench.action.closeSidebar",
        "when": "view.workbench.debug.welcome.visible"
    },
    {
        "key": "alt+a",
        "command": "workbench.view.explorer",
        "when": "!explorerViewletVisible"
    },
    {
        "key": "alt+a",
        "command": "workbench.action.closeSidebar",
        "when": "explorerViewletVisible"
    },
    // Search docs
    {
        "key": "alt+g",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.terminal.newInActiveWorkspace",
                {
                    "command": "workbench.action.terminal.sendSequence",
                    "args": {
                        "text": "cd /home/dm/Documents/gd-md-docs && /home/dm/Documents/dot/scripts/fzf-find.sh && exit\u000D"
                    }
                }
            ]
        }
    },
    // Search symbols in project
    {
        "key": "ctrl+1",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.terminal.newInActiveWorkspace",
                {
                    "command": "workbench.action.terminal.sendSequence",
                    "args": {
                        "text": "cd /home/dm/dev/gre && /home/dm/Documents/dot/scripts/fzf-find.sh && exit\u000D"
                    }
                }
            ]
        }
    },
    // Search files in project
    {
        "key": "ctrl+2",
        "command": "runCommands",
        "args": {
            "commands": [
                "workbench.action.terminal.newInActiveWorkspace",
                {
                    "command": "workbench.action.terminal.sendSequence",
                    "args": {
                        "text": "cd /home/dm/dev/gre && /home/dm/Documents/dot/scripts/fzf-files.sh && exit\u000D"
                    }
                }
            ]
        }
    }
]